{
  "name": "lawyer-verification-tests-js",
  "version": "1.0.0",
  "description": "Automated tests for lawyer verification module using JavaScript/TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:html": "jest --coverage --reporters=default --reporters=jest-html-reporters",
    "test:e2e": "playwright test",
    "test:performance": "jest --testNamePattern='Performance'",
    "test:all": "npm run test && npm run test:e2e",
    "test:report": "npm run test:html && npm run test:e2e && node scripts/generate-report.js",
    "report:generate": "node scripts/generate-report.js",
    "report:open": "npm run report:generate && open reports/combined-report.html"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lodash": "^4.17.21"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{test,spec}.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./reports",
          "filename": "jest-report.html",
          "expand": true,
          "hideIcon": false,
          "pageTitle": "AI.ttorney Lawyer Verification Tests",
          "logoImgPath": "./assets/logo.svg"
        }
      ]
    ],
    "coverageReporters": [
      "html",
      "text",
      "lcov",
      "clover"
    ]
  }
}
